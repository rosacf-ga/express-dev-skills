<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Skills</title>
</head>
<body>
    <h1>Skills</h1>
    <a href="skills/new">Add a new skill</a>
    <ul>
        <% skills.forEach(function(s) { %>
        <a href="/skills/<%= s.id %>"><li><%= s.skill %> - <%= s.mastered ? 'has mastered' : 'has not mastered' %> </li></a>
        <li>
            <form action="/skills/<%= s.id %>?_method=DELETE"
                class="delete-form" method="POST">
                <button type="submit">Delete this skill </button>
            </form>
        </li>
        <% }) %>
    </ul>
</body>
</html>